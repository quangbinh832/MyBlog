@model MyBlog.Models.Post

@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link href="~/AdminAssets/lib/select2/css/select2.min.css" rel="stylesheet" />
}

    <div class="slim-pageheader">
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">Danh sách tin đăng</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa tin đăng</li>
        </ol>
        <h6 class="slim-pagetitle">Chỉnh sửa tin đăng</h6>
    </div><!-- slim-pageheader -->

    <div class="section-wrapper">
        <div class="form-layout">
            <form asp-area="Admin" asp-controller="Posts" asp-action="Edit" asp-route-id="@Model.PostId" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="PostId" />
                <input type="hidden" asp-for="CreatedDate" />
                @*   <input type="hidden" asp-for="Views" />*@
                <input type="hidden" asp-for="Author" />
                <input type="hidden" asp-for="AccountId" />
                <input type="hidden" asp-for="Thumb" />
                <div class="row mg-b-25">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">TIÊU ĐỀ: <span class="tx-danger">*</span></label>
                            <input class="form-control" type="text" asp-for="Title">
                        </div>
                    </div><!-- col-6 -->

                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label">MIÊU TẢ NGẮN: <span class="tx-danger">*</span></label>
                            <input class="form-control" type="text" maxlength="254" asp-for="Scontents">
                        </div>
                    </div><!-- col-6 -->
                    <div class="col-lg-4">
                        <div class="form-group mg-b-10-force">
                            <label class="form-control-label">DANH MỤC : <span class="tx-danger">*</span></label>
                            <select class="form-control select2" asp-for="CatId" asp-items="@ViewBag.DanhMuc" required>
                                <option label="DANH MỤC"></option>
                            </select>
                        </div>
                    </div><!-- col-4 -->
                    <!-- col-4 -->
                    <div class="col-lg-6">
                        <div class="form-group mg-b-10-force">
                            <label class="form-control-label">ẢNH ĐẠI DIỆN: <span class="tx-danger">*</span></label>
                            <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                        </div>
                    </div><!-- col-6 -->

                    <hr />
                    <div class="col-lg-12">
                        <div class="form-group mg-b-10-force">
                            <label class="form-control-label">TAGS: <span class="tx-danger">*</span></label>
                            <input class="form-control" type="text" asp-for="Tags">
                        </div>
                    </div><!-- col-12 -->
                    @*  <div class="col-lg-12">
                <div class="form-group mg-b-10-force">
                <label class="form-control-label">Metakey: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="MateKey">
                </div>
                </div><!-- col-12 -->
                <div class="col-lg-12">
                <div class="form-group mg-b-10-force">
                <label class="form-control-label">MetaDesc: <span class="tx-danger">*</span></label>
                <input class="form-control" type="text" asp-for="MetaDesc">
                </div>
                </div><!-- col-12 -->*@

                    <br />
                    <div class="col-lg-12">
                        <div class="form-group mg-b-10-force">
                            <label class="form-control-label">MÔ TẢ: <span class="tx-danger">*</span></label>
                            <textarea asp-for="Contents"></textarea>
                        </div>
                    </div><!-- col-12 -->
                </div><!-- row -->
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <input type="checkbox" asp-for="Published"><span> Published</span>
                    </div>
                </div><!-- col-4 -->
               @* <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <input type="checkbox" asp-for="IsHot"><span> IsHot</span>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <input type="checkbox" asp-for="IsNewfeed"><span> IsNewfeed</span>
                    </div>
                </div><!-- col-4 -->*@
                <div style="text-align:center !important" class="form-layout-footer">
                    <button class="btn btn-primary bd-0">ĐĂNG TIN</button>
                    <button class="btn btn-secondary bd-0">Cancel</button>
                </div><!-- form-layout-footer-->
            </form>
        </div>
    </div>
    @section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/AdminAssets/lib/select2/js/select2.min.js"></script>
    <script>

        jQuery(document).ready(function () {
            $('#Contents').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200, // set editor height
                minHeight: null,// set minimum height of editor
                maxHeight: null,// set maximum height of editor
                focus: true   // set focus to editable area after initializing summernote
            });
        });
    </script>
}