@model MyBlog.Models.Post

@{
    ViewData["Title"] = "Xác nhận xóa bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Posts" asp-action="Index">Danh sách tin đăng</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xác nhận xóa bài biết</li>
    </ol>
    <h6 class="slim-pagetitle">Xác nhận xóa bài viết</h6>
</div> <!--slim-pageheader-->
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div><!--col-4-->
            <div class="col-7 col-sm-8">
                <input asp-for="PostId" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tiêu đề:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="Title" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Ngày đăng:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="CreatedDate" class="form-control" type="text">
            </div><! -- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Danh mục:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="Cat.CatName" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tác giả:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="@Model.Author" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
    </div> <!--form-layout-->
    <div style="text-align:center !important" class="form-layout-footer mg-t-30">
        <form asp-area="Admin" asp-controller="Posts" asp-action="Delete" asp-route-id="@Model.PostId">
            <input type="hidden" asp-for="PostId" />
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
            <a asp-area="Admin" asp-controller="Posts" asp-action="Index" class="btn btn-success bd-0">Xem lại danh sách tin tức</a>
        </form>
    </div>
</div>

