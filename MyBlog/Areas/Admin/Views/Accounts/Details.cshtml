@model MyBlog.Models.Account

@{
    ViewData["Title"] = "Xem hồ sơ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Accounts" asp-action="Index">Danh sách tài khoản</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xem hồ sơ</li>
    </ol>
    <h6 class="slim-pagetitle">Xem hồ sơ</h6>
</div> <!--slim-pageheader-->
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="AccountId" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tên tài khoản:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="FullName" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Địa chỉ Email:
            </div><! -- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="Email" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Số điện thoại:
            </div><! -- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="Phone" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Quyền truy cập:
            </div><! -- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="Role.RoleName" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Lần cuối đăng nhập:
            </div><! -- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="LastLogin" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
    </div><!-- form-layout -->
</div>