@model MyBlog.Models.Category

@{
    ViewData["Title"] = "Xác nhận xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Index">Danh sách danh mục</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xóa danh mục</li>
    </ol>
    <h6 class="slim-pagetitle">Xóa danh mục</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper mg-t-20">
    <div class="form-layout form-layout-7">
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                ID:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="CatId" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
        <div class="row no-gutters">
            <div class="col-5 col-sm-4">
                Tên Danh Mục:
            </div><!-- col-4 -->
            <div class="col-7 col-sm-8">
                <input asp-for="CatName" class="form-control" type="text">
            </div><!-- col-8 -->
        </div><!-- row -->
    </div><!-- form-layout -->
    <div style="text-align:center !important" class="form-layout-footer mg-t-30">
        <form asp-action="Delete">
            <input type="hidden" asp-for="CatId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" asp-route-id="@Model.CatId" class="btn btn-primary bd-0">Quay về</a>
        </form>
    </div>

</div>



