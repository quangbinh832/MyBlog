                                    <a href="@url" class="category-badge">Inspiration</a>
                                    <h4 class="post-title"><a href="blog-single.html">@item.Title</a></h4>
                                    <ul class="meta list-inline mb-0">
                                        <li class="list-inline-item"><a href="#">@item.Author</a></li>
                                        <li class="list-inline-item">@item.CreatedDate.Value.ToString("yyyy MMMM dd")</li>
                                    </ul>
                                </div>
                                <a href="blog-single.html">
                                    <div class="thumb rounded">
                                        <div class="inner">
                                            <img src="~/images/posts/@item.Thumb" alt="@item.Title" />
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }



                </div>

                <div class="spacer" data-height="50"></div>

                <!-- section header -->
                <div class="section-header">
                    <h3 class="section-title">Bài viết mới nhất</h3>
                    <img src="~/images/wave.svg" class="wave" alt="wave" />
                </div>

                <div class="padding-30 rounded bordered">

                    <div class="row">
                        @if (Model.LatestPosts != null && Model.LatestPosts.Count > 0)
                        {
                            int i = 0;
                            foreach (var item in Model.LatestPosts)
                            {
                                string url = $"/{item.Alias}.html";
                                <div class="col-md-12 col-sm-6">
                                    <!-- post -->
                                    <div class="post post-list clearfix">
                                        <div class="thumb rounded">
                                            <span class="post-format-sm">
                                                <i class="icon-picture"></i>
                                            </span>
                                            <a href="@url">
                                                <div class="inner">
                                                    <img src="~/images/posts/@item.Thumb" alt="@item.Title" />
                                                </div>
                                            </a>
                                        </div>
                                        <div class="details">
                                            <ul class="meta list-inline mb-3">
                                                <li class="list-inline-item"><a href="#">@item.Author</a></li>
                                                <li class="list-inline-item"><a href="/@item.Cat.Alias">@item.Cat.CatName</a></li>
                                                <li class="list-inline-item">@item.CreatedDate.Value.ToString("yyyy MMMM dd")</li>
                                            </ul>
                                            <h5 class="post-title"><a href="@url">@item.Title</a></h5>
                                            <p class="excerpt mb-0">@item.Scontents</p>
                                            <div class="post-bottom clearfix d-flex align-items-center">
                                                <div class="social-share me-auto">
                                                    <button class="toggle-button icon-share"></button>
                                                    <ul class="icons list-unstyled list-inline mb-0">
                                                        @await Component.InvokeAsync("Social")
                                                    </ul>
                                                </div>
                                                <div class="more-button float-end">
                                                    <a href="@url"><span class="icon-options"></span></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                i++;
                                if (i == 10) break;
                            }
                        }
                    </div>
                    <!-- load more button -->
                    <div class="text-center">
                        <button class="btn btn-simple">Tải thêm</button>
                    </div>
                </div>

            </div>
            <div class="col-lg-4">

                <!--sidebar-->
                <div class="sidebar">
                    <!--widget about-->
                    <div class="widget rounded">
                        <div class="widget-about data-bg-image text-center" data-bg-image="~/images/map-bg.png">
