@model MyBlog.ModelViews.HomeViewModel



@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- hero section -->
<section id="hero">

    <div class="container-xl">

        <div class="row gy-4">
            @if (Model.Featured != null)
            {
                string url = $"/{Model.Featured.Alias}.html";

                <div class="col-lg-8">

                    <!-- featured post large -->
                    <div class="post featured-post-lg">
                        <div class="details clearfix">
                            <a href="/@Model.Featured.Cat.Alias" class="category-badge">@Model.Featured.Cat.CatName</a>
                            <h2 class="post-title"><a href="@url">@Model.Featured.Title</a></h2>
                            <ul class="meta list-inline mb-0">
                                <li class="list-inline-item"><a href="#">@Model.Featured.Author</a></li>
                                <li class="list-inline-item">@Model.Featured.CreatedDate.Value.ToString("yyyy MMMM dd")</li>
                            </ul>
                        </div>
                        <a href="@url">
                            <div class="thumb rounded">
                                <div class="inner data-bg-image" data-bg-image="~/images/posts/@Model.Featured.Thumb">
                                    <img src="~/images/posts/trend1.jpg" alt="@Model.Featured.Title" />
                                </div>

                            </div>
                        </a>
                    </div>

                </div>
            }

            <div class="col-lg-4">

                <!-- post tabs -->
                <div class="post-tabs rounded bordered">
                    <!-- tab navs -->
                    <ul class="nav nav-tabs nav-pills nav-fill" id="postsTab" role="tablist">
                        <li class="nav-item" role="presentation"><button aria-controls="popular" aria-selected="true" class="nav-link active" data-bs-target="#popular" data-bs-toggle="tab" id="popular-tab" role="tab" type="button">Phổ biến</button></li>
                        <li class="nav-item" role="presentation"><button aria-controls="recent" aria-selected="false" class="nav-link" data-bs-target="#recent" data-bs-toggle="tab" id="recent-tab" role="tab" type="button">Gần đây</button></li>
                    </ul>
                    <!-- tab contents -->
                    <div class="tab-content" id="postsTabContent">
                        <!-- loader -->
                        <div class="lds-dual-ring"></div>
                        <!-- popular posts -->
                        <div aria-labelledby="popular-tab" class="tab-pane fade show active" id="popular" role="tabpanel">
                            @if (Model.Populars != null)
                            {
                                int i = 0;
                                foreach (var item in Model.Populars)
                                {

                                    string url = $"/{item.Alias}.html";
                                    <!-- post -->
                                    <div class="post post-list-sm circle">
                                        <div class="thumb circle">
                                            <a href="@url">
                                                <div class="inner">
                                                    <img src="~/images/posts/@item.Thumb" alt="@item.Title" />
                                                </div>
                                            </a>
                                        </div>
                                        <div class="details clearfix">
                                            <h6 class="post-title my-0"><a href="@url">@item.Title</a></h6>
                                            <ul class="meta list-inline mt-1 mb-0">
                                                <li class="list-inline-item">@item.CreatedDate.Value.ToString("yyyy MMMM dd")</li>
                                            </ul>
                                        </div>
                                    </div>
                                    i++;
                                    if (i == 4) break;
                                }

                            }

                            <!-- recent posts -->
                            <div aria-labelledby="recent-tab" class="tab-pane fade" id="recent" role="tabpanel">
                                @if (Model.Recents != null)
                                {
                                    int i = 0;
                                    foreach (var item in Model.Recents)
                                    {
                                        string url = $"/{item.Alias}.html";
                                        <!-- post -->
                                        <div class="post post-list-sm circle">
                                            <div class="thumb circle">
                                                <a href="@url">
                                                    <div class="inner">
                                                        <img src="~/images/posts/@item.Thumb" alt="@item.Title" />
                                                    </div>
                                                </a>
                                            </div>
                                            <div class="details clearfix">
                                                <h6 class="post-title my-0"><a href="@url">@item.Title</a></h6>
                                                <ul class="meta list-inline mt-1 mb-0">
                                                    <li class="list-inline-item">@item.CreatedDate.Value.ToString("yyyy MMMM dd")</li>
                                                </ul>
                                            </div>
                                        </div>
                                        i++;
                                        if (i == 2) break;
                                    }
                                }

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>

